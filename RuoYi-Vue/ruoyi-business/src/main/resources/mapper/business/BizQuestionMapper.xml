<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.business.mapper.BizQuestionMapper">

    <resultMap type="BizQuestion" id="BizQuestionResult">
        <result property="questionId"    column="question_id"    />
        <result property="questionType"    column="question_type"    />
        <result property="questionContent"    column="question_content"    />
        <result property="grade"    column="grade"    />
        <result property="semester"    column="semester"    />
        <result property="lessonNum"    column="lesson_num"    />
        <result property="optionA"    column="option_a"    />
        <result property="optionB"    column="option_b"    />
        <result property="optionC"    column="option_c"    />
        <result property="optionD"    column="option_d"    />
        <result property="answer"    column="answer"    />
        <result property="analysis"    column="analysis"    />
        <result property="filePath"    column="file_path"    />
        <result property="previewPath"    column="preview_path"    />
        <result property="isPublic"    column="is_public"    />
        <result property="typingDuration"    column="typing_duration"    />
        <result property="wordCount"    column="word_count"    />
        <result property="creatorId"    column="creator_id"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="nickName"    column="nick_name"    />
    </resultMap>

    <sql id="selectBizQuestionVo">
        select q.question_id, q.question_type, q.question_content, q.grade, q.semester, q.lesson_num, q.option_a, q.option_b, q.option_c, q.option_d, q.answer, q.analysis, q.file_path, q.preview_path, q.is_public, q.typing_duration, q.word_count, q.creator_id, q.create_by, q.create_time, q.update_by, q.update_time, u.nick_name 
        from biz_question q
        left join sys_user u on q.creator_id = u.user_id
    </sql>

    <select id="selectBizQuestionList" parameterType="BizQuestion" resultMap="BizQuestionResult">
        <include refid="selectBizQuestionVo"/>
        <where>
            <if test="questionType != null  and questionType != ''"> and q.question_type = #{questionType}</if>
            <if test="questionContent != null  and questionContent != ''"> and q.question_content like concat('%', #{questionContent}, '%')</if>
            <if test="isPublic != null  and isPublic != ''"> and q.is_public = #{isPublic}</if>
            <if test="grade != null "> and q.grade = #{grade}</if>
            <if test="semester != null  and semester != ''"> and q.semester = #{semester}</if>
            <if test="lessonNum != null "> and q.lesson_num = #{lessonNum}</if>
            <!-- 创建人模糊查询 (用昵称搜) -->
            <if test="createBy != null and createBy != ''"> 
                and (u.nick_name like concat('%', #{createBy}, '%') or q.create_by like concat('%', #{createBy}, '%'))
            </if>
            <!-- 权限过滤：私有题目仅创建人和管理员可见 -->
            <if test="creatorId != null">
                and (q.is_public = 'Y' OR q.creator_id = #{creatorId})
            </if>
        </where>
    </select>

    <select id="selectBizQuestionByQuestionId" parameterType="Long" resultMap="BizQuestionResult">
        <include refid="selectBizQuestionVo"/>
        where q.question_id = #{questionId}
    </select>

    <insert id="insertBizQuestion" parameterType="BizQuestion" useGeneratedKeys="true" keyProperty="questionId">
        insert into biz_question
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="questionType != null and questionType != ''">question_type,</if>
            <if test="questionContent != null and questionContent != ''">question_content,</if>
            <if test="grade != null">grade,</if>
            <if test="semester != null and semester != ''">semester,</if>
            <if test="lessonNum != null">lesson_num,</if>
            <if test="optionA != null">option_a,</if>
            <if test="optionB != null">option_b,</if>
            <if test="optionC != null">option_c,</if>
            <if test="optionD != null">option_d,</if>
            <if test="answer != null">answer,</if>
            <if test="analysis != null">analysis,</if>
            <if test="filePath != null">file_path,</if>
            <if test="previewPath != null">preview_path,</if>
            <if test="isPublic != null and isPublic != ''">is_public,</if>
            <if test="typingDuration != null">typing_duration,</if>
            <if test="wordCount != null">word_count,</if>
            <if test="creatorId != null">creator_id,</if>
            <if test="createBy != null and createBy != ''">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null and updateBy != ''">update_by,</if>
            <if test="updateTime != null">update_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="questionType != null and questionType != ''">#{questionType},</if>
            <if test="questionContent != null and questionContent != ''">#{questionContent},</if>
            <if test="grade != null">#{grade},</if>
            <if test="semester != null and semester != ''">#{semester},</if>
            <if test="lessonNum != null">#{lessonNum},</if>
            <if test="optionA != null">#{optionA},</if>
            <if test="optionB != null">#{optionB},</if>
            <if test="optionC != null">#{optionC},</if>
            <if test="optionD != null">#{optionD},</if>
            <if test="answer != null">#{answer},</if>
            <if test="analysis != null">#{analysis},</if>
            <if test="filePath != null">#{filePath},</if>
            <if test="previewPath != null">#{previewPath},</if>
            <if test="isPublic != null and isPublic != ''">#{isPublic},</if>
            <if test="typingDuration != null">#{typingDuration},</if>
            <if test="wordCount != null">#{wordCount},</if>
            <if test="creatorId != null">#{creatorId},</if>
            <if test="createBy != null and createBy != ''">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null and updateBy != ''">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
        </trim>
    </insert>

    <update id="updateBizQuestion" parameterType="BizQuestion">
        update biz_question
        <trim prefix="SET" suffixOverrides=",">
            <if test="questionType != null and questionType != ''">question_type = #{questionType},</if>
            <if test="questionContent != null and questionContent != ''">question_content = #{questionContent},</if>
            <if test="grade != null">grade = #{grade},</if>
            <if test="semester != null and semester != ''">semester = #{semester},</if>
            <if test="lessonNum != null">lesson_num = #{lessonNum},</if>
            <if test="optionA != null">option_a = #{optionA},</if>
            <if test="optionB != null">option_b = #{optionB},</if>
            <if test="optionC != null">option_c = #{optionC},</if>
            <if test="optionD != null">option_d = #{optionD},</if>
            <if test="answer != null">answer = #{answer},</if>
            <if test="analysis != null">analysis = #{analysis},</if>
            <if test="filePath != null">file_path = #{filePath},</if>
            <if test="previewPath != null">preview_path = #{previewPath},</if>
            <if test="isPublic != null and isPublic != ''">is_public = #{isPublic},</if>
            <if test="typingDuration != null">typing_duration = #{typingDuration},</if>
            <if test="wordCount != null">word_count = #{wordCount},</if>
            <if test="creatorId != null">creator_id = #{creatorId},</if>
            <if test="createBy != null and createBy != ''">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null and updateBy != ''">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where question_id = #{questionId}
    </update>

    <delete id="deleteBizQuestionByQuestionId" parameterType="Long">
        delete from biz_question where question_id = #{questionId}
    </delete>

    <delete id="deleteBizQuestionByQuestionIds" parameterType="String">
        delete from biz_question where question_id in
        <foreach item="questionId" collection="array" open="(" separator="," close=")">
            #{questionId}
        </foreach>
    </delete>

    <!-- 新增：根据课程ID删除所有关联题目 -->
    <delete id="deleteByLessonId" parameterType="java.lang.Long">
        DELETE FROM biz_lesson_question WHERE lesson_id = #{lessonId}
    </delete>

    <!-- 新增：批量新增课程题目关联 -->
    <insert id="batchInsert" parameterType="java.util.List">
        INSERT INTO biz_lesson_question (lesson_id, question_id, question_score, order_num) VALUES
        <foreach collection="list" item="item" separator=",">
            (#{item.lessonId}, #{item.questionId}, #{item.questionScore}, #{item.orderNum})
        </foreach>
    </insert>

    <!-- 更新题目预览状态 -->
    <update id="updatePreviewStatus">
        UPDATE biz_question 
        SET preview_status = #{previewStatus}
        <if test="previewPath != null">
            , preview_path = #{previewPath}
        </if>
        WHERE question_id = #{questionId}
    </update>
</mapper>
